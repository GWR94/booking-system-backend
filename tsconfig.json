{
  "compilerOptions": {
    "target": "ES6",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "baseUrl": ".",
    "paths": {
      "@controllers": ["src/controllers/index", "src/controllers"],
      "@controllers/*": ["src/controllers/*"],
      "@middleware": ["src/middleware/index", "src/middleware"],
      "@middleware/*": ["src/middleware/*"],
      "@utils": ["src/utils/index", "src/utils"],
      "@utils/*": ["src/utils/*"],
      "@config": ["src/config/index", "src/config"],
      "@config/*": ["src/config/*"],
      "@routes": ["src/routes/index", "src/routes"],
      "@routes/*": ["src/routes/*"],
      "@interfaces": ["src/interfaces/index", "src/interfaces"],
      "@interfaces/*": ["src/interfaces/*"],
      "@services": ["src/services/index", "src/services"],
      "@services/*": ["src/services/*"]
    },
    "types": ["jest", "node"],
    "typeRoots": ["./node_modules/@types", "./src/types"]
  },
  "include": ["src/**/*.ts", "scripts/populateDB.ts", "server.ts", "app.ts"],
  "exclude": ["node_modules"]
}
