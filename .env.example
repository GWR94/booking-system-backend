# Database Configuration
# format: postgresql://USER:PASSWORD@HOST:PORT/DATABASE?schema=SCHEMA
DATABASE_URL="postgresql://johndoe:randompassword@localhost:5432/mydb?schema=public"
POSTGRES_PASSWORD="your_postgres_password"

# Authentication Secrets (Generate strong random strings for these)
# You can generate these using `openssl rand -base64 32`
JWT_SECRET="your_jwt_secret_key_here"
REFRESH_TOKEN_SECRET="your_refresh_token_secret_here"
ACCESS_TOKEN_SECRET="your_access_token_secret_here"
SESSION_SECRET="your_session_secret_here"

# Frontend URL (CORS origin)
FRONT_END="http://localhost:3000"

# OAuth Providers
# Google Console: https://console.cloud.google.com/
GOOGLE_CLIENT_ID="your_google_client_id.apps.googleusercontent.com"
GOOGLE_CLIENT_SECRET="your_google_client_secret"

# Meta for Developers: https://developers.facebook.com/
FACEBOOK_CLIENT_ID="your_facebook_client_token"
FACEBOOK_APP_ID="your_facebook_app_id"
FACEBOOK_APP_SECRET="your_facebook_app_secret"

# X (Twitter) Developer Portal: https://developer.x.com/en/portal/dashboard
TWITTER_CONSUMER_KEY="your_twitter_api_key"
TWITTER_CONSUMER_SECRET="your_twitter_api_secret"

# Stripe Configuration (Test Mode keys start with sk_test_ / pk_test_)
STRIPE_SECRET_KEY="sk_test_..."
STRIPE_WEBHOOK_SECRET="whsec_..."

# Google ReCaptcha
CAPTCHA_SECRET_KEY="your_recaptcha_secret_key"

# Admin User Setup (Used for seeding or initial setup)
ADMIN_EMAIL="admin@example.com"
ADMIN_PASSWORD="ChangeThisPassword123!"

# Email Configuration (SMTP)
EMAIL_HOST="smtp.example.com"
EMAIL_PORT="465"
EMAIL_SECURE="true" # true for 465, false for other ports usually
EMAIL_USER="your_smtp_username"
# This is usually the password or an app-specific password
EMAIL_FROM="no-reply@yourdomain.com" 

# Stripe Price IDs (Products must be created in Stripe Dashboard)
# Create 3 products/prices for membership tiers
STRIPE_PRICE_ID_PAR="price_mock_par"
STRIPE_PRICE_ID_BIRDIE="price_mock_birdie"
STRIPE_PRICE_ID_HOLEINONE="price_mock_holeinone"